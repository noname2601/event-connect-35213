  <%# プロフィール投稿画面 %>
<div class="box_two">
 <div class="box-inner">
    <%= form_with model: @introduction, local: true do |f|%>
    <h1>プロフィール投稿</h1>
   <%# エラーメッセージ表示 %>
    <%= render 'layouts/error_messages', model: f.object %>
   <%# /エラーメッセージ表示 %>
   <div class="field">
   <%= f.label :skill, "ご自身のスキルを記載してください" %><br />
   <%= f.text_field :skill, class: :title %>
   </div>

   <div class="field">
   <%= f.label :description, "特技の詳細やコメントを記載してください" %><br />
   <%= f.text_area :description, class: :form__text %>
   </div>

   <div class="field">
   <%= f.label :twitter_id, "連絡用のTwetterアカウントを記載してください" %><br />
   <%= f.text_field :twitter_id, class: :title %> 
   </div>

   <div class="field">
   <%= f.label :image, "プロフィール画像を載せてください" %><br />
   <%= f.file_field :image %>
   </div>

   <div class="box-login">
   <%= f.submit "プロフィール投稿", class: :form__btn  %>
   </div>
   <% end %>
  </div> 
</div> 
  <%# /プロフィール投稿画面 %>