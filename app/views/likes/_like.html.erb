<% if performer_signed_in? %>
    <% if introduction.liked_by?(current_performer) %>
     <p><span>お気に入り解除: </span><%=link_to introduction.likes.count, introduction_likes_path(introduction.id), method: :delete, remote: true %></p>
        <% else %>
        <p><span>お気に入りに追加: </span><%=link_to introduction.likes.count, introduction_likes_path(introduction.id), method: :post, remote: true %></p>
    <% end %>
     <% else %>
    <p><span>お気に入り数: </span><%= introduction.likes.count %></p>
<% end %>