<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @performer, url: performer_registration_path, local: true do |f| %>

      <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_area :nickname, autofocus: true, autocomplete: "nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス " %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :family_name, "フルネーム（漢字）" %><br />
          <%= f.text_area :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :name_kana, "フルネーム（カナ）" %><br />
          <%= f.text_area :name_kana, autofocus: true, autocomplete: "name_kana" %>
        </div>

        <div class="field">
          <%= f.label :twitter_id, "ツィッターID " %><br />
          <%= "依頼者の連絡の為プロフィールに表示されます" %><br />
          <%= f.text_area :twitter_id, autofocus: true, autocomplete: "twitter_id" %>
        </div>

        
        <div class="actions">
          <%= f.submit "サインアップ", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>